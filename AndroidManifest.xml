        <activity
            android:name="com.bhagya.bookaholic.GetPathMenuActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name="com.bhagya.bookaholic.TravelDetailsActivity"
            android:label="@string/app_name" >
