        <activity
            android:name="com.bhagya.bookaholic.MyBookListsActivity"
            android:label="@string/app_name" >
        </activity>
        <activity
            android:name="com.bhagya.bookaholic.BookDetailsActivity"
            android:label="@string/app_name" >
        </activity>
        <activity
            android:name="com.bhagya.bookaholic.BookshopDetailsActivity"
            android:label="@string/app_name" >
        </activity>
        <activity
            android:name="com.bhagya.bookaholic.AddNewBookListActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name="com.bhagya.bookaholic.AddNewBookActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name="com.bhagya.bookaholic.BookListDetailsActivity"
            android:label="@string/app_name" >
